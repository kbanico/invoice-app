<div class="col-xs-12">
  <%= simple_form_for(@invoice) do |f| %>
    <div id="invoice-wrap">
      <%= f.error_notification %>
      <div class="row">
        <div class="col-xs-12">
          <h3 class="page-header">INVOICE<small class="pull-right"></small></h3>
        </div>
      </div>

      <div class="row invoice-info">
        <div class="col-xs-4 invoice-col">
          From
          <address>
            <%= f.input_field :company, class: "form-control" %>
            <input class="form-control" placeholder="address line 1">
            <input class="form-control" placeholder="address line 2">
            <input class="form-control" placeholder="phone number">
          </address>
        </div>
        <div class="col-xs-4 invoice-col">
          To
          <address>
            <%= f.input_field :contragent, class: "form-control" %>
            <input class="form-control" placeholder="address line 1">
            <input class="form-control" placeholder="address line 2">
            <input class="form-control" placeholder="phone number">
          </address>
        </div>
        <div class="col-xs-4 invoice-col">
          <form class="form-horizontal">
            <div class="form-group">
              <div class="col-xs-4"><label>Invoice #</label></div>
              <div class="col-xs-8 invoice_num"></div>
            </div>
            <div class="col-xs-12"></div>
            <div class="form-group">
              <div class="col-xs-4"><%= f.label :date, required: false %></div>
              <div class="col-xs-8"><%= f.input_field :date, class: "form-control" %></div>
            </div>

            <div class="col-xs-12"></div>
            <div class="form-group">
              <div class="col-xs-4"><%= f.label :currency, required: false %></div>
              <div class="col-xs-8"><%= f.input_field :currency, class: "form-control" %></div>
            </div>

            <div class="col-xs-12"></div>
              <div class="form-group">
                <div class="col-xs-4"><%= f.label :amount, required: false %></div>
                <div class="col-xs-8"><%= f.input_field :amount, class: "form-control" %></div>
              </div>
          </form>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12 pull-left">
          <%= f.button :submit, "Submit Payment", class: "btn btn-warning" %>
        </div>
      </div>
    </div>
  <% end %>
</div>


























